---
import { Image } from "astro:assets";
import Logo from "../../assets/sage_600px.png";
import ShortForm from "../ui/ShortForm.astro";

const links = [
  { name: "About us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Use Cases", href: "#cases" },
  { name: "Pricing", href: "#testimonials" },
  { name: "Blog", href: "#home" },
];
---

<section class="sm:px-5">
  <div class="no-underline w-full max-w-[1280px]">
    <div
      class="px-[15px] bg-dark text-white py-[55px] lg:px-[60px]"
    >
      <div>
        
{/* Group: Logo, Nav */}
        <div class="flex flex-col md:flex-row gap-2 justify-between">
          {/* Site Logo */}
            <a class="place-items-start" href="#home">
            <Image src={Logo} alt="Site Logo" hover:bg-white w-80 md:w-120 />
            </a>

{/* Nav Links */}
          <ul class="flex flex-col sm:flex-row">
            { links.map((link) => { return (
            <li class="text-center">
              <a class="hover:underline" href="{link.href}"> {link.name} </a>
            </li>
            ); }) }
          </ul>


        </div>

{/* Contact Us */}
        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contact us</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: info@sagetech.support </span>
              <span> Phone: (503) 454-6438 </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
          
{/* Social Media Icons */}
